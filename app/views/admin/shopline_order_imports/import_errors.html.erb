<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">匯入錯誤列表</h1>

  <% if @errors.any? %>
    <div class="bg-white shadow-md rounded p-6">
      <p class="mb-4 text-red-600">共有 <%= @errors.size %> 筆資料匯入失敗</p>
      
      <div class="bg-gray-100 p-4 rounded overflow-auto max-h-96">
        <ul class="list-disc pl-5 space-y-2">
          <% @errors.each do |error| %>
            <li class="text-red-600"><%= error %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% else %>
    <div class="bg-white shadow-md rounded p-6">
      <p class="text-green-600">沒有匯入錯誤</p>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "返回匯入頁面", new_admin_shopline_order_import_path, class: "bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" %>
    <%= link_to "查看訂單列表", admin_shopline_orders_path, class: "ml-2 bg-gray-300 hover:bg-gray-400 text-gray-800 py-2 px-4 rounded" %>
  </div>
</div>