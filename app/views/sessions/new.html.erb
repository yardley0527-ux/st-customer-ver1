<h2>Admin 登入</h2>
<%= form_with url: login_path, method: :post, local: true do |f| %>

  <div>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password, "密碼" %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "登入" %>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>
